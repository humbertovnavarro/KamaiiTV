// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource client {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Message {
  id        String @id @default(cuid()) @map("_id")
  userId    String
  text      String
  createdAt DateTime @default(now())
  deletedAt DateTime
}

model User {
  id String @id @default(cuid()) @map("_id")
  username String
  usernameLower String
  password String
  email String
  accountStatus String @default("unregistered")
}

model Emote {
  id String @id @default(cuid()) @map("_id")
  name String
  bytes Bytes
}

model ChannelEmote {
  id String @id @default(cuid()) @map("_id")
  channel String
}

model Avatar {
  id String @id @default(cuid()) @map("_id")
  bytes Bytes
}

model Channel {
  id String @id @default(cuid()) @map("_id")
  name String
  description String
  owner String
  viewers Int
}

model ChannelCard {
  id String @id @default(cuid()) @map("_id")
  channel String
  type String
  heading String
  body String
}

model Viewer {
  id String @id @default(cuid()) @map("_id")
  channel String
  user String
}

model StreamKey {
  userId String @id @default(cuid()) @map("_id")
  key String
}

model Stream {
  id String @id @default(cuid()) @map("_id")
  userId String
  description String
  game String
  createdAt DateTime @default(now())
}
